<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:DynamicUserInterfaceExample.ViewModels"
                    xmlns:views="clr-namespace:DynamicUserInterfaceExample.Views">

    <DataTemplate DataType="{x:Type viewModels:FirstLeftViewModel}">
        <views:FirstLeftView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:SecondLeftViewModel}">
        <views:SecondLeftView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ThirdLeftViewModel}">
        <views:ThirdLeftView/>
    </DataTemplate>


    <DataTemplate DataType="{x:Type viewModels:FirstRightViewModel}">
        <views:FirstRightView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:SecondRightViewModel}">
        <views:SecondRightView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ThirdRightViewModel}">
        <views:ThirdRightView/>
    </DataTemplate>

</ResourceDictionary>